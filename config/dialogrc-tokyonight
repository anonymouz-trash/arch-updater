# === Base colors ===
# Screen background (terminal)
screen_color = (WHITE,BLACK,OFF)

# Shadow (disabled but defined)
shadow_color = (BLACK,BLACK,OFF)

# Dialog background
dialog_color = (WHITE,BLACK,OFF)

# Titles
title_color = (CYAN,BLACK,ON)

# Borders
border_color = (CYAN,BLACK,OFF)

# === Buttons ===
button_active_color = (BLACK,CYAN,OFF)
button_inactive_color = (WHITE,BLACK,OFF)

button_key_active_color = (YELLOW,CYAN,ON)
button_key_inactive_color = (CYAN,BLACK,ON)

button_label_active_color = (BLACK,CYAN,OFF)
button_label_inactive_color = (WHITE,BLACK,OFF)

# === Input / Search boxes ===
inputbox_color = dialog_color
inputbox_border_color = border_color

searchbox_color = dialog_color
searchbox_title_color = (CYAN,BLACK,OFF)
searchbox_border_color = border_color

position_indicator_color = (CYAN,BLACK,OFF)

# === Menus ===
menubox_color = dialog_color
menubox_border_color = border_color

item_color = dialog_color
item_selected_color = (BLACK,MAGENTA,OFF)

tag_color = (WHITE,BLACK,OFF)
tag_selected_color = (BLACK,CYAN,OFF)

tag_key_color = button_key_inactive_color
tag_key_selected_color = (YELLOW,CYAN,ON)

# === Checkboxes / Radiobuttons ===
check_color = dialog_color
check_selected_color = (BLACK,CYAN,OFF)

# === Scroll arrows ===
uarrow_color = (CYAN,BLACK,ON)
darrow_color = uarrow_color

# === Help / Forms ===
itemhelp_color = (WHITE,BLACK,OFF)

form_active_text_color = (BLACK,CYAN,OFF)
form_text_color = (WHITE,BLACK,OFF)
form_item_readonly_color = (CYAN,BLACK,ON)

# === Gauge ===
gauge_color = (CYAN,BLACK,ON)

# === Secondary borders ===
border2_color = dialog_color
inputbox_border2_color = dialog_color
searchbox_border2_color = dialog_color
menubox_border2_color = dialog_color
